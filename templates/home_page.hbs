<div class="theme-container">

  <div class="theme-breadcrumbs">
    <ol class="breadcrumbs">
      <li title="{{help_center.name}}">
        <a href="/hc/{{help_center.locale}}">{{help_center.name}}</a>
      </li>
    </ol>
  </div>

  <h2 class="theme-heading">{{help_center.name}}</h2>
</div>

<div class="theme-container">
  <div class="theme-box">

    <div class="welcome">
      <h1 class="welcome__title">
        {{#if settings.translations_enable}}
          {{dc settings.welcome_title}}
        {{else}}
          {{settings.welcome_title}}
        {{/if}}
      </h1>
      <div class="welcome__search">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path fill-rule="evenodd" clip-rule="evenodd" d="M7 10C8.65685 10 10 8.65685 10 7C10 5.34315 8.65685 4 7 4C5.34315 4 4 5.34315 4 7C4 8.65685 5.34315 10 7 10ZM12 7C12 9.76142 9.76142 12 7 12C4.23858 12 2 9.76142 2 7C2 4.23858 4.23858 2 7 2C9.76142 2 12 4.23858 12 7Z" fill="#4D4D4D"/>
          <path d="M9.10344 9.20564C9.49396 8.81512 10.1271 8.81512 10.5177 9.20564L15.0326 13.7205C15.4231 14.1111 15.4231 14.7442 15.0326 15.1348C14.642 15.5253 14.0089 15.5253 13.6183 15.1348L9.10344 10.6199C8.71292 10.2293 8.71292 9.59617 9.10344 9.20564Z" fill="#4D4D4D"/>
        </svg>
        {{#if settings.translations_enable}}
          {{search instant=true placeholder=(dc settings.search_placeholder)}}
        {{else}}
          {{search instant=true placeholder=settings.search_placeholder}}
        {{/if}}
      </div>
      <div class="popular-searches">
        <span>Populaire zoektermen:</span>
        <a class="link" href="/hc/{{help_center.locale}}/search?utf8=✓&query=attest">attest</a>,
        <a class="link" href="/hc/{{help_center.locale}}/search?utf8=✓&query=staking">staking</a>,
        <a class="link" href="/hc/{{help_center.locale}}/search?utf8=✓&query=mobib">mobib</a>
      </div>
    </div>

    <div class="row">
      <div class="col-12 col-md-8">
        <div class="home-left-col">
          {{#if settings.show_category_list}}
            <div class="category-list home-spoiler" data-plugin-spoiler>
              <h2 class="article-list__title home-spoiler__toggle js-spoiler-toggle">
                {{#if settings.translations_enable}}
                  {{dc settings.category_list_title}}
                {{else}}
                  {{settings.category_list_title}}
                {{/if}}
              </h2>

              <div class="home-spoiler__body js-spoiler">
                <div class="row category-list__row">
                  {{#if (compare categories.length ">" 1)}}
                    {{#each categories}}
                      <div class="col-12 col-md-6">
                        <a href="{{url}}" class="category-block">
                          <span class="category-block__icon">
                            {{#if (asset id prefix='cat-' suffix='.png')}}
                              <img src="{{asset id prefix='cat-' suffix='.png'}}" alt="{{name}}">
                            {{/if}}
                            {{#if (asset id prefix='cat-' suffix='.svg')}}
                              <img src="{{asset id prefix='cat-' suffix='.svg'}}" alt="{{name}}">
                            {{/if}}
                          </span>
                          <span class="h3 category-block__name">{{name}}</span>
                          {{#if description}}
                            <span class="category-block__description">{{description}}</span>
                          {{/if}}
                        </a>
                      </div>
                    {{/each}}
                  {{else}}
                    {{#each categories}}
                      {{#each sections}}
                        <div class="col-12 col-md-6">
                          <a href="{{url}}" class="category-block">
                            <span class="category-block__icon">
                              {{#if (asset id prefix='sec-' suffix='.png')}}
                                <img src="{{asset id prefix='sec-' suffix='.png'}}" alt="{{name}}">
                              {{/if}}
                              {{#if (asset id prefix='sec-' suffix='.svg')}}
                                <img src="{{asset id prefix='sec-' suffix='.svg'}}" alt="{{name}}">
                              {{/if}}
                            </span>
                            <span class="h3 category-block__name">{{name}}</span>
                            {{#if description}}
                              <span class="category-block__description">{{description}}</span>
                            {{/if}}
                          </a>
                        </div>
                      {{/each}}
                    {{/each}}
                  {{/if}}
                </div>
              </div>
            </div>
          {{/if}}
        </div>
      </div>

      <div class="col-12 col-md-4">
        <div class="home-right-col home-spoiler" data-plugin-spoiler>
          <h2 class="article-list__title home-spoiler__toggle js-spoiler-toggle">
            Meest gestelde vragen
          </h2>

          <div class="promoted-articles home-spoiler__body js-spoiler">
            {{#each promoted_articles}}
              <a href="{{url}}" class="link">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" clip-rule="evenodd" d="M6.70711 3.29289C6.31658 2.90237 5.68342 2.90237 5.29289 3.29289C4.90237 3.68342 4.90237 4.31658 5.29289 4.70711L8.83888 8.25309L5.30559 11.7864C4.91506 12.1769 4.91506 12.8101 5.30559 13.2006C5.69611 13.5911 6.32928 13.5911 6.7198 13.2006L10.9619 8.9585C11.3524 8.56798 11.3524 7.93482 10.9619 7.54429C10.9453 7.52772 10.9283 7.51184 10.9109 7.49668L6.70711 3.29289Z" fill="#4D4D4D"/>
                </svg>
                <span>{{title}}</span>
              </a>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

